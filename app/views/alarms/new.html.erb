<h1>Alarms#new message</h1>
<p>Find me in app/views/alarms/new.html.erb</p>
<div class='row'>
	<div class= 'col-md-6 col-md-offset-3'>
		<%= form_for :create_alarm, url: alarms_new_path do |f| %>
			<%= f.label :message, 'Alarms Message' %>
			<%= f.text_field :message %>

			<%= f.submit "Send Alarm Message", class: "btn btn-primary" %>
		<% end %>	
	</div>
</div>